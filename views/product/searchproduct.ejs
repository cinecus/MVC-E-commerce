<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cinecus Shop</title>
</head>

<body>
  <%- include ../layout %>
    <div class="container">
      <div class="row">
        <%- include ../sidebar %>
          <div class="col-lg-9">
            <div class="row">
              <% products.forEach(function(product){ %>
                <div class="col-lg-4 col-md-6 mb-2 mt-4">
                  <div class="card h-100 " style="margin-bottom: -20px;">
                    <a href="#"><img class="card-img-top" src="/images/<%= product.image %>" alt="" width="500px" height="300px" data-toggle="modal" data-target="#<%= product.name%>"></a>
                    <div class="card-body ">
                      <h4 class="card-title">
                        <a href="/product/showproduct/<%=product._id%>"><%= product.name %></a>
                      </h4>
                      <h5><%= product.price %> บาท</h5>
                      <hr>
                        <form class="form-group" action="/customer/cart/<%=product._id%>" method="post">
                          <input type="hidden" name="product_id" value="<%=product._id%>">
                          <input type="submit" class="btn btn-primary" value="เพิ่มลงตะกร้า">
                        </form>
                    </div>
                  </div>
                </div>
              <%})%>
            </div>
      </div>
    </div>
</body>

</html>