<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinecus Shop</title>
</head>
<body>
    <%- include ../layout %>
    <div class="container mt-4 mb-4">
        <h1 align="center">Edit Slide Bar By Admin</h1>
        <% if(locals.errors){ %>
            <ul class="alert alert-danger">
            <% Object.values(errors).forEach(function(error){ %>
                    <li><%= error.msg %></li>
            <%})%>
            </ul>
        <%}%>
        <form action="/admin/slidebar/edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Title :</label>
                <input type="text" name="title" id="" placeholder="Title" class="form-control" value="<%= slidebars[0].title %>">
            </div>
            <div class="form-group">
                <label for="">Slide Bar Image :</label>
                <input type="file" name="image" id="" class="form-control">
            </div>
            <input type="hidden" name="id" value="<%= slidebars[0]._id %>">
            <input type="submit" value="เพิ่ม" class="btn btn-primary">
        </form>
</body>
</html>